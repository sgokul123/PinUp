<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:background="@color/back_front_color"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:id="@+id/layout_main_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="118dp"
            android:layout_marginRight="100dp"
            >
            <ImageView
                android:id="@+id/imageView_main_logo"
                android:layout_width="43dp"
                android:layout_height="58dp"
                android:src="@drawable/pinup" />

            <TextView
                android:id="@+id/textView_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView_main_logo"
               android:layout_marginLeft="16dp"
              android:layout_marginTop="@dimen/dimen_align_10dp"
                android:text="PinUp"

                android:textColor="@color/text_color_white"
                android:textSize="@dimen/dimen_size_30sp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/textview_main_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_main_l1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Welcome to PinUp"
            android:textAlignment="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/dimen_size_20sp"
            android:textStyle="bold"
            android:fontFamily="Avenir-Medium"/>

        <TextView
            android:id="@+id/textview_main_sfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Signup for"
            android:textAlignment="center"
            android:layout_below="@+id/textview_main_welcome"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/dimen_size_20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_main_sfor"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="91dp"
            android:layout_marginRight="85.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            >
        <ImageView
            android:id="@+id/imageView_admin"
            android:layout_width="69dp"
            android:layout_height="69dp"
            tools:mockup_opacity="1"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/imageView_user"
            android:layout_width="58.5dp"
            android:layout_height="68.5dp"
            tools:mockup_opacity="1"
            android:layout_marginLeft="56dp"
            android:layout_toRightOf="@id/imageView_admin"
            app:srcCompat="@drawable/user" />
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>
